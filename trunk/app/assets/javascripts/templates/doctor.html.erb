<div class="pretraga" style="margin-top:40px;text-align:center;">
  <div style="display:inline-block;margin-right: 10px;">
    {{ 'SORT' | translate }}
    <select ng-model="orderProp" class="form-control" style="margin-top:5px;">
      <option value="user_patient_id">Pacijent</option>
      <option value="user_doctor_id">Doktor</option>
      <option value="appointment_date">Termin rezervacije</option>
    </select>
  </div>

  <div style="display:inline-block;">
    {{ 'SEARCH' | translate }} <input ng-model="query" style="margin-top:5px;" class="form-control">
    </div>
</div>


</br></br>
<table class="table table-hover table-condensed tabela" ng-controller="SearchReservationsControler">
    <thead>
        <tr>
            <th>Pacijent</th>
            <th>Doktor</th>
            <th>Termin</th>
            <th>Opis</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
      <tr ng-repeat="reservation in reservations | filter:query | orderBy:orderProp">
        <td> {{reservation.user_patient.name}} {{reservation.user_patient.surname}}</td>
        <td> {{reservation.user_doctor.name }} {{reservation.user_doctor.surname }}</td>
        <td> {{reservation.appointment_date | date:'dd-MM-yyyy HH:mm'}}</td>
        <td> {{reservation.description}}</td>
        <td> {{reservation.status}}</td>
        <td>
          
        </td>
      </tr>

</table>
