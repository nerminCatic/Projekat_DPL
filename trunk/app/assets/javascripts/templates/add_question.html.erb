<div ng-controller="QuestionsController">
<div class="navbar" navbar></div>
<div>
  <alert ng-repeat="alert in alerts" type="{{alert.type}}" close="alert.close()">{{ alert.msg }}</alert>
</div><br><br><br>
  <div class="row">
       <div class="col-lg-4">
       </div>
       <div class="col-lg-4">
                <div class="boxed-grey" style="width:100%;">
                    <form id="contact-form" name="feedbackForm" >
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="name">
                                    {{ 'QUESTION' | translate }}</label>
                                <input type="text" ng-model="question.name" class="formf-control" placeholder="Enter your question" required="required">
                            </div>
                            <div class="form-group"><div>
                                <label for="description">
                                    {{ 'DSC' | translate }}</label></div>
                                <textarea  ng-model="question.description" class="formf-control msg-desc" rows="9" cols="25" required="required" placeholder="Description"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="subject">
                                    {{ 'CATEGORY' | translate }}</label>
                                <select ng-model="category" ng-options="category.name for category in categories track by category.id" class="formf-control">
                                </select>
                            </div>
                        </div>
                        <br>
                        <div class="col-md-12">
                            <button style="float:right;" type="submit" class="btn btn-primary" ng-click="createQuestion()" ng-disabled="feedbackForm.$invalid">
                                {{ 'SQUESTION' | translate }}</button>
                        </div>
                    </div>
                    </form>
                </div>
            </div>
       <div class="col-lg-4">
       </div>
  </div>
</div>