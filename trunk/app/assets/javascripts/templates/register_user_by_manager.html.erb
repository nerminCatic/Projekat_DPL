<section class="bg-one brown">
	<div class="container">
        <div class="row wow fadeInDown" data-wow-duration="500ms">
            <div class="col-lg-12">
                    
                <!-- section title -->
                <div class="title text-center add-user">
                    <h2>Kreiranje novog <span class="color">uposlenika</span></h2>
                    <div class="border"></div>
                </div>
                <!-- /section title -->
                        
