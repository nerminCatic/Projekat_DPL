	<div class="text-center">
        <div class=" wow bounce animated">      
            <div style="height:500px"> 
            	     
	    			<div class="account-wall addusermng">
						<form class="form-signin form-inline" role="form" name="myForm" ng-controller="RegistrationUserByManagerController">
							<h1 class="text-center login-title">Novi uposlenik </h1>
						  	<!-- input name-->
						  	<div class="input-prepend form-group has success has-feedback">
						  		<label class="control-label" for="inputSuccess4"></label>
							  	<input name="name" pattern="^([A-z]){3,}$" maxlength="20" class="form-control" type="text" placeholder="Ime" ng-model="user.name" required autofocus id="inputSuccess4"/>
			          			<span class="glyphicon glyphicon-user form-control-feedback" style="color:black"></span></br>
							  	<!--name validation (client side)-->
								<span style="color:red" ng-show="myForm.name.$dirty && myForm.name.$invalid">
									<span ng-show="myForm.name.$error.required">Unos imena je obavezan.</span>Ime mora sadržavati više od 3 karaktera.
								</span>	
						    </div>

							<!-- input surname-->
							<div class="input-prepend form-group has success has-feedback">
								<label class="control-label" for="inputSuccess4"></label>
							  	<input name="surname" pattern="^([A-z]){3,}$" maxlength="25" type="text" class="form-control" placeholder="Prezime" ng-model="user.surname" required id="inputSuccess4"/>
			          			<span class="glyphicon glyphicon-user form-control-feedback" style="color:black"></span></br>
							  	<!--surname validation (client side)-->
							  	<span style="color:red" ng-show="myForm.surname.$dirty && myForm.surname.$invalid">
							    	<span ng-show="myForm.surname.$error.required">Unos prezimena je obavezan.</span>Prezime mora sadržavati više od 3 karaktera.
							    </span>	
							</div>

							<!-- input job-->
							<div class="input-prepend form-group has success has-feedback">
								<label class="control-label" for="inputSuccess4"></label>
							  	<input name="job" type="text" pattern="^([A-z]){2,}$" maxlength="35" class="form-control" placeholder= "Posao" ng-model="user.job" id="inputSuccess4">
			          			<span class="glyphicon glyphicon-briefcase form-control-feedback" style="color:black"></span></br>
							  	<!--job validation (client side)-->
							  	<span style="color:red" ng-show="myForm.job.$dirty && myForm.job.$invalid">Posao mora sadržavati više od 2 karaktera.
							    </span>	
							</div>

							<!-- input adress-->
							<div class="input-prepend form-group has success has-feedback">
								<label class="control-label" for="inputSuccess4"></label>
							  	<input name="adress" type="text" class="form-control" placeholder="Adresa" ng-model="user.adress" id="inputSuccess4"/>
			          			<span class="glyphicon glyphicon-map-marker form-control-feedback" style="color:black"></span></br>
							</div>

							<!-- input phone-->
							<div class="input-prepend form-group has success has-feedback">
								<label class="control-label" for="inputSuccess4"></label>
							  	<input name="phone" type="text" class="form-control" placeholder="Telefon" ng-model="user.phone" id="inputSuccess4"/>
			          			<span class="glyphicon glyphicon-home form-control-feedback" style="color:black"></span></br>
							</div>

							<!-- input email-->
							<div class="input-prepend form-group has success has-feedback">
								<label class="control-label" for="inputSuccess4"></label>
							  	<input name="email" type="email" class="form-control" placeholder="E-mail" ng-model="user.email" required id="inputSuccess4"/>
			          			<span class="glyphicon glyphicon-envelope form-control-feedback" style="color:black"></span></br>
							  	<!--email validation (client side)-->
							  	<span style="color:red" ng-show="myForm.email.$dirty && myForm.email.$invalid">
									<span ng-show="myForm.email.$error.required">Unos emaila je obavezan.</span>
									<span ng-show="myForm.email.$error.email">Format email addrese nije dobar.</span>
								</span>	
							</div>

							<!-- input role -->
							<div class="input-prepend form-group has success has-feedback">
								<label class="control-label" for="inputSuccess4"></label>
			                    <select class="form-control" ng-model="role" ng-options="role.name for role in roles track by role.id" required id="inputSuccess4"/>
			          			</br>
			                    </select>
			                </div>

							<!-- input password-->
							<div class="input-prepend form-group has success has-feedback">
								<label class="control-label" for="inputSuccess4"></label>
							  	<input name="password" type="password" minlength="3" class="form-control" placeholder="Šifra" ng-model="user.password"  required id="inputSuccess4"/>
			          			<span class="glyphicon glyphicon-lock form-control-feedback" style="color:black"></span></br>
							  	<!--password validation (client side)-->
							  	<span style="color:red" ng-show="myForm.password.$dirty && myForm.password.$invalid">
							    <span ng-show="myForm.password.$error.required">Unos pasvorda je obavezan.</span>Pasvord mora imati više od tri karaktera.
							    </span>	
							</div>

							<!-- input password confirmation-->
							<div class="input-prepend form-group has success has-feedback">
								<label class="control-label" for="inputSuccess4"></label>
				      			<span class="add-on"><i class="icon-lock"></i></span>
							  	<input name="passwordc" type="password" class="form-control" placeholder= "Potvrda šifre" ng-model="user.password_confirmation" id="inputSuccess4"/>
			          			<span class="glyphicon glyphicon-lock form-control-feedback" style="color:black"></span></br>
							</div>

							<!--recaptcha-->
							<!--<div class="g-recaptcha" data-sitekey="6LccAAUTAAAAAFP9BYFC4qFicss1-I2v4M9-sp1P"></div>
							</br>-->

							<!-- submit button-->
							<div class="actions">
							  <button class="btn btn-lg btn-primary btn-block" ng-click="registerUser()"  ng-disabled="myForm.$invalid">Kreiraj</button>
							</div>
						</form>
					</div>
				
			</div>
		</div>
	</div>
