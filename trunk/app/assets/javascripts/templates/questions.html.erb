<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="images/star.png" type="favicon/ico" />

    <title>Grafika Saran</title>
  </head> 
    
    <body id="body" class="user">
<header id="navigation" class="navbar navbar-inverse navigationbar  navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    
                    <div class="container" ng-controller="HomeController">
                    
                    <a href="#/home_admin" class="logo">
                       logo 
                    </a>
                <!--<div class="localization-bs-en" localization-bs-en></div>-->
                

                <!-- main nav -->
                <nav class="collapse navbar-collapse navbar-right" role="Navigation">
                    <ul id="nav" class="nav navbar-nav usernav">
                        <li class="current"><a href ng-click="openHome()"><span>{{ "HOME" | translate }}</span></a></li>
                        <li><a href ng-click="openChangePass()"><span>{{ "CHANGE_PASS" | translate }}</span></a></li>
                        <li><a href ng-click="logout()"><span>{{ "LOGOUT" | translate }}</span></a></li>
                    </ul>
                </nav>
                <!-- /main nav -->
                </div>
            </div>
            </div>
        </header>

</br></br>
<section id="showcase" class="bg-one brown">
<div ng-controller="QuestionsController">
            <div class="container">
                <div class="row wow fadeInDown" data-wow-duration="500ms">
                    <div class="col-lg-12">
                    
                        <!-- section title -->
                        <div style="display:inline-block;margin-left:450px;">
                            <h2>Moji <span class="coloru">projekti</span></h2>
                            <div class="border"></div>
                        </div>
                        <!-- /section title -->  
                        <div class="pretraga" >
                          <div style="display:inline-block;float:right;margin-top:-120px;">
                          {{ 'SEARCH' | translate }} <input ng-model="query" class="form-control">
                          </div>

                        </div>                      
                    </div> <!-- /end col-lg-12 -->
                </div> <!-- end row -->
            </div>  <!-- end container -->
    
            

    </br>  
   
<div class="container">
    <table class="table table-striped">
    <thead>
        <tr>
            <th>Naziv zadatka</th>
            <th>Projekat</th>
            <th>Komentari</th>
            <th>Zavrseno</th>
        </tr>
    </thead>
    <tbody>
        
      <tr ng-repeat="question in questions | filter:query | orderBy:orderProp">
      
        <td> <a href class="tablea" ng-click="showQuestion(question.id)" > <h4 class="list-group-item-heading"> {{question.name}}</h4>   </a>
                        <p class="list-group-item-text" style="font-size:11px;margin-top:10px;"><span class="glyphicon glyphicon-pencil"></span> 
                        {{ question.user.name}} {{ question.user.surname}} &nbsp&nbsp&nbsp
                        <span class="glyphicon glyphicon-time"></span> {{ question.time_created }}</td>
        <td> {{ question.category.name }}</td>
        <td> {{question.number_of_comments}}</td>
        <td> {{question.status}}</td>
             
      </tr>
      </tbody>
</table>

   
    

</div>
</section>   <!-- End section -->
        </body>
        </html>