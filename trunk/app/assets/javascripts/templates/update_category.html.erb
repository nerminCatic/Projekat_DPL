	    <div class="container">    
		<div style="height:380px">
	    <div class="account-wall addprojectmng">

	    <form class="form-signin form-inline" role="form" name="myForm" ng-controller="UpdateCategoryController2">
	    		<h1 class="text-center login-title"> Uređivanje projekta </h1>
			  	<!-- input name-->
			  	<div class="input-prepend form-group has success has-feedback">
			  		<label class="control-label" for="inputSuccess4"></label>
				  	<input name="name" pattern="^([a-zA-Z0-9_ ]){3,}$" maxlength="20" class="form-control" type="text" placeholder="Ime" ng-model="category.name" required autofocus id="inputSuccess4"/>
				  	<span class="glyphicon glyphicon-user form-control-feedback" style="color:black"></span></br>
				  	<br>
				  	<!--name validation (client side)-->
					<span style="color:red" ng-show="myForm.name.$dirty && myForm.name.$invalid">
						<span ng-show="myForm.name.$error.required">Unos imena je obavezan.</span>Ime mora sadržavati više od 3 karaktera.
					</span>	
			    </div>

				<!-- input job-->
				<div class="input-prepend form-group has success has-feedback">
					<label class="control-label" for="inputSuccess4"></label>
				  	<input name="desc" type="text" pattern="^([a-zA-Z0-9_ ]){3,}$" maxlength="255" class="form-control" placeholder= "Opis" ng-model="category.description" id="inputSuccess4"/><br>
				  	<span class="glyphicon glyphicon-briefcase form-control-feedback" style="color:black"></span></br>
				  	<span style="color:red" ng-show="myForm.description.$dirty && myForm.jdescriptionb.$invalid">Opis mora sadržavati više od 3 karaktera.
				    </span>	
				</div>

				<!-- submit button-->
				<div class="actions">
				  <button class="btn btn-lg btn-primary btn-block" ng-click="updateCategoryC()"  ng-disabled="myForm.$invalid">Izmijeni</button>
				</div>
			  </form>
			</div>
